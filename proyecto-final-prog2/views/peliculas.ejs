    <section>
      <ul class="detalles">

      </ul>
      
      <form class="resenia" name= "datos" action="/resenia/crear/<%= idPelicula %>" method="POST">
        <input type="email" name="email" class="resenia" placeholder="Email">
        <input type="password" name="contrasenia" class="resenia" placeholder="Password">
        <input type="text" name="texto_resenia" class="resenia" placeholder="Ingrese su resenia!">
        <input type="number" min= "0" max="10" name="puntaje" placeholder="0">
        <button type="submit" class="botonBuscar">Enviar Resenia</button>
      
      </form>   
      

      <button class="recomendaciones uk-button uk-button-text" type="submit" name="button">Tambien podría interesarte</button>
      <ul class="display-none recomen">
      </ul>
    </section>

    <section>
      <p>Resenias de otros usuarios:</p>
  <% if(resenia.length > 0) { %>
  <% for (let i=0 ; i < resenia.length; i++) {%>
    <p> Usuario: <%= resenia[i].usuario.nombre_de_usuario %> </p>
    <p> Resenia: <%= resenia[i].texto_resenia %></p>
    <p> Puntaje: <%= resenia[i].puntaje %>  </p>
    <p> Fecha de Creacion: <%= resenia[i].texto_resenia %></p>
    <p> Fecha de actualizacion: <%= resenia[i].texto_resenia %></p>
     <% } %>
    <% } else { %>
      <p>Todavia no hay resenias</p>
      <% } %>
    </section>

